<!DOCTYPE html>
<html lang="en">

<head>
    <base href="/">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Order Manager (MSC)</title>
    <!-- Third Parties -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="css/modules/bootstrap.min.css" rel="stylesheet">
    <link href="css/modules/mdb.css" rel="stylesheet">
    <!-- Custom styles -->
    <link href="css/style.css" rel="stylesheet">
    <link href="css/nav-card.layout.css" rel="stylesheet">
    <link href="css/style.effects.css" rel="stylesheet">
    <link href="css/fav-buttons.layout.css" rel="stylesheet">
</head>

<body onload="init()">
    <nav id="navDetail" class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar primary-color" nav-card-layout>
        <div class="navbar-brand" href="#">
            MSC - ESSD
            <br>
                <a class="back-button" href="/order-manager/orders" data-toggle="tooltip-secondary-scroll-2-inside" data-placement="bottom" title="Back">
                    <i class="fa fa-lg fa-angle-left" aria-hidden="true"></i>
                </a>
        </div>
        <div class="avatar ml-auto white">
            <img src="https://pbs.twimg.com/profile_images/1051588814274224129/4X-41oJc_400x400.jpg" alt="marco caballero" class="avatar-mini img-fluid z-depth-1 rounded-circle">
        </div>
    </nav>

    <div class="view-small text-center justify-content-center align-items-center" mt-20>
        <div class="row justify-content-center align-items-center">
            <div class="col-6 mb-lg-8 mb-4">
                <div class="card clearfix">
                    <h5 class="card-header primary-color white-text text-md-left float-left py-4">
                        <i class="fa fa-list-ul float-left ml-2 mr-3 mt-1" aria-hidden="true"></i>
                        <strong>{{order.title}}</strong>
                    </h5>
                    <!-- Grid row -->
                    <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#order.items}}
                            <li class="list-group-item clearfix">
                                <div class="custom-control float-left custom-checkbox custom-control-inline">
                                    <input type="checkbox" onclick="toggleCheck(this, '{{order.id}}','{{id}}')" class="custom-control-input" name="elementChecked" id="check_{{id}}" value="{{checked}}">
                                    <label class="custom-control-label" id="label_check_{{id}}" for="check_{{id}}" style="vertical-align: -webkit-baseline-middle;"><strong class="ml-3">{{name}}</strong></label>
                                </div>
                                {{#showDeletBtn}}
                                <button onclick="deleteItemById('{{order.id}}', '{{id}}')" type="button" class="btn btn-secondary btn-sm float-right btn-md">
                                    <i class="fa fa-trash mr-2" aria-hidden="true"></i>
                                    Delete
                                </button>
                                {{/showDeletBtn}}
                            </li>
                        {{/order.items}}
                    </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{>_footer}}

    <!-- FABS -->
    <a fav-up onclick="checkDeletion()" class="btn btn-secondary fab-button mt-3 scroll-with-nav" data-toggle="tooltip-secondary-scroll-2-inside" data-placement="bottom" title="Delete order">
        <i class="fa fa-trash" aria-hidden="true"></i>
    </a>
    <a fav-down href="/order-manager/order/edit/{{order.id}}" class="btn btn-secondary fab-button" data-toggle="tooltip-secondary-scroll-2-inside" data-placement="top" title="Edit order">
        <i class="fa fa-pencil" aria-hidden="true"></i>
    </a>

    <!-- MODALS -->
    <div id="orderDeletionModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="orderDeletionModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderDeletionModalLabel">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>You will remove the order:</h5>
                    <span><em>ID:</em> <strong>{{order.id}}</strong></span>
                    <span><em>Title:</em> <strong>{{order.title}}</strong></span>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <button onClick="deleteOrderById('{{order.id}}')" class="btn btn-secondary">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 3rd parties -->
    <script type="text/javascript" src="js/modules/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="js/modules/popper.min.js"></script>
    <script type="text/javascript" src="js/modules/bootstrap.js"></script>
    <script type="text/javascript" src="js/modules/mdb.min.js"></script>
    <!-- Custom modules -->
    <script type="text/javascript" src="js/common.module.js"></script>
    <script type="text/javascript" src="js/animations-main.js"></script>
    <script type="text/javascript" src="js/handler-detail.js"></script>
</body>

</html>